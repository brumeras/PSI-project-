@code {
    [Parameter]
    public string? RoomCode { get; set; }

    [Parameter]
    public string? Username { get; set; }
    
    [Parameter]
    public List<string>? SelectedTopics { get; set; }
    
    private List<GameStatement> statements = new();
    private int currentStatementIndex = 0;
    private string statusMessage = "";
    private bool isAnimating = false;
    private string swipeClass = "";
    private string swipeStyle = "";
    private Dictionary<string, bool> playerAnswers = new();
    private int reviewIndex = 0;
    private bool isReviewMode = false;

    protected override void OnInitialized()
    {
        if (UserService.IsAuthenticated && !string.IsNullOrEmpty(RoomCode))
        {
            LoadStatements();
        }
    }

    protected override void OnParametersSet()
    {
        if (UserService.IsAuthenticated && !string.IsNullOrEmpty(RoomCode) && !statements.Any())
        {
            LoadStatements();
        }

        if (UserService.IsAuthenticated && !string.IsNullOrEmpty(RoomCode) && statements.Any() && !playerAnswers.Any())
        {
            LoadPlayerAnswers();
        }
    }

    private void LoadStatements()
    {
        if (string.IsNullOrEmpty(RoomCode))
        {
            statusMessage = "Error: No room code provided";
            Console.WriteLine("[ERROR] [NewGame] Cannot load statements - RoomCode is empty");
            return;
        }

        try
        {
            statements = CompatibilityService.GetRoomStatements(RoomCode, SelectedTopics, 10);
            statusMessage = $"Loaded {statements.Count} statements. Let's begin!";
            Console.WriteLine($"[INFO] [NewGame] Loaded {statements.Count} statements for room {RoomCode}");
            Console.WriteLine($"[DEBUG] [NewGame] Statement IDs: {string.Join(", ", statements.Select(s => s.Id))}");

            LoadPlayerAnswers();
        }
        catch (Exception ex)
        {
            statusMessage = $"Error loading statements: {ex.Message}";
            Console.WriteLine($"[ERROR] [NewGame] Error loading statements: {ex.Message}");
        }
    }

    private async Task SwipeRight()
    {
        await PerformSwipe(true, "swipe-right");
    }

    private async Task SwipeLeft()
    {
        await PerformSwipe(false, "swipe-left");
    }

    private async Task PerformSwipe(bool agreeWithStatement, string animationClass)
    {
        if (isAnimating || currentStatementIndex >= statements.Count) return;

        isAnimating = true;
        swipeClass = animationClass;

        if (!string.IsNullOrEmpty(RoomCode))
        {
            var statement = statements[currentStatementIndex];
            string playerUsername = Username ?? UserService.CurrentUser ?? "";
            
            Console.WriteLine($"[NewGame] Saving swipe - Player: '{playerUsername}', Room: {RoomCode}, Statement: {statement.Id}, Agree: {agreeWithStatement}");
            
            bool saved = CompatibilityService.SaveSwipe(
                RoomCode,
                playerUsername,
                statement.Id,
                agreeWithStatement
            );

            if (!saved)
            {
                statusMessage = "Error saving your answer. Please try again.";
                Console.WriteLine($"[ERROR] [NewGame] Failed to save swipe for statement {statement.Id}");
            }
            else
            {
                Console.WriteLine($"[INFO] [NewGame] Successfully saved swipe {currentStatementIndex + 1}/{statements.Count}");
                playerAnswers[statement.Id] = agreeWithStatement;
            }
        }
        else
        {
            Console.WriteLine("[ERROR] [NewGame] Cannot save swipe - RoomCode is empty");
        }

        await Task.Delay(500);
        currentStatementIndex++;
        swipeClass = "";
        isAnimating = false;
        StateHasChanged();
    }

    private void SkipStatement()
    {
        if (currentStatementIndex < statements.Count - 1)
        {
            currentStatementIndex++;
            statusMessage = "Statement skipped.";
            Console.WriteLine($"[INFO] [NewGame] Skipped to statement {currentStatementIndex + 1}");
        }
    }

    private void GoBack()
    {
        if (currentStatementIndex > 0)
        {
            currentStatementIndex--;
            statusMessage = "";
            Console.WriteLine($"[INFO] [NewGame] Went back to statement {currentStatementIndex + 1}");
        }
    }

    private void StartReview()
    {
        if (!statements.Any()) return;

        isReviewMode = true;
        reviewIndex = 0;
        statusMessage = "Reviewing your answers...";
        Console.WriteLine("[INFO] [NewGame] Entered review mode");
    }

    private void CloseReview()
    {
        isReviewMode = false;
        statusMessage = string.Empty;
        Console.WriteLine("[INFO] [NewGame] Closed review mode");
    }

    private void GoToNextReview()
    {
        if (reviewIndex < statements.Count - 1)
        {
            reviewIndex++;
        }
    }

    private void GoToPreviousReview()
    {
        if (reviewIndex > 0)
        {
            reviewIndex--;
        }
    }

    private void LoadPlayerAnswers()
    {
        var playerUsername = Username ?? UserService.CurrentUser ?? string.Empty;
        if (string.IsNullOrEmpty(playerUsername) || string.IsNullOrEmpty(RoomCode))
        {
            return;
        }

        var swipes = CompatibilityService.GetPlayerSwipes(RoomCode, playerUsername);
        playerAnswers = swipes.ToDictionary(s => s.StatementId, s => s.AgreeWithStatement);

        if (playerAnswers.Count > 0)
        {
            currentStatementIndex = Math.Min(playerAnswers.Count, statements.Count);
            Console.WriteLine($"[INFO] [NewGame] Loaded {playerAnswers.Count} saved answers for review");
        }
    }

    private void UpdateReviewSelection(bool agreeWithStatement)
    {
        if (!isReviewMode || !statements.Any()) return;

        var statement = statements[reviewIndex];
        var playerUsername = Username ?? UserService.CurrentUser ?? string.Empty;

        if (string.IsNullOrEmpty(RoomCode) || string.IsNullOrEmpty(playerUsername))
        {
            statusMessage = "Unable to save your review choice.";
            return;
        }

        var saved = CompatibilityService.SaveSwipe(RoomCode, playerUsername, statement.Id, agreeWithStatement);
        if (!saved)
        {
            statusMessage = "Error updating your answer. Please try again.";
            Console.WriteLine($"[ERROR] [NewGame] Failed to update swipe for statement {statement.Id}");
            return;
        }

        playerAnswers[statement.Id] = agreeWithStatement;
        statusMessage = "Answer updated.";
        Console.WriteLine($"[INFO] [NewGame] Updated answer for statement {reviewIndex + 1}");
    }

    private double GetProgressPercentage()
    {
        if (statements.Count == 0) return 0;
        return Math.Round((double)currentStatementIndex / statements.Count * 100, 1);
    }

    public bool IsComplete()
    {
        bool isComplete = currentStatementIndex >= statements.Count;
        if (isComplete)
        {
            Console.WriteLine($"[INFO] [NewGame] Player completed all {statements.Count} statements");
        }
        return isComplete;
    }
}
