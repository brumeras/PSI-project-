@page "/Home"
@rendermode InteractiveServer
@using KNOTS.Models
@using KNOTS.Services
@using KNOTS.Services.Chat
@using KNOTS.Services.Interfaces
@using Microsoft.JSInterop
@using System.Text.Json
@using System.Threading
@inject InterfaceUserService UserService
@inject InterfaceCompatibilityService CompatibilityService
@inject IMessageService MessageService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@implements IDisposable

<PageTitle>Home</PageTitle>

<div class="home-container">
    <!-- Animuotas fonas -->
    <div class="background-animation">
        <div class="floating-elements">
            @for (int i = 0; i < 8; i++)
            {
                <div class="floating-element" style="animation-delay: @(i * -2.5)s;">🥨</div>
            }
        </div>
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>
        
        @for (int i = 0; i < 30; i++)
        {
            <div class="particle"></div>
        }
        
        <div class="mouse-glow" id="mouseGlow"></div>
    </div>

    @if (UserService.IsAuthenticated)
    {
        <!-- Navigation -->
        <nav class="top-navigation">
            <div class="nav-content">
                <div class="nav-brand">
                    <div class="brand-icon-wrapper">
                        <span class="brand-rope">🥨</span>
                        <div class="brand-glow"></div>
                    </div>
                    <span class="brand-text">KNOTS</span>
                </div>
                <div class="nav-links">
                    <a href="/Home" class="nav-link active">
                        <span>Home</span>
                        <div class="link-shine"></div>
                    </a>
                    <a href="/activity" class="nav-link">
                        <span>My Activity</span>
                        <div class="link-shine"></div>
                    </a>
                    <a href="/leaderboard" class="nav-link">
                        <span>Top Knotters</span>
                        <div class="link-shine"></div>
                    </a>
                </div>
                <button class="btn-logout" @onclick="Logout">
                    <span>Logout</span>
                    <div class="btn-shimmer"></div>
                </button>
            </div>
        </nav>

        <!-- Main Content -->
        <div class="content-wrapper">
            <!-- Welcome Section -->
            <div class="welcome-section glass-card">
                <div class="card-shine"></div>
                <div class="corner-decorations">
                    <span class="corner-deco top-left">🥨</span>
                    <span class="corner-deco top-right">🥨</span>
                    <span class="corner-deco bottom-left">🥨</span>
                    <span class="corner-deco bottom-right">🥨</span>
                </div>
                
                <div class="welcome-content">
                    <div class="sparkles">
                        @for (int i = 0; i < 3; i++)
                        {
                            <svg class="sparkle" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                <path d="M12 2L15 8L22 9L17 14L18 21L12 18L6 21L7 14L2 9L9 8L12 2Z" />
                            </svg>
                        }
                    </div>
                    
                    <h1 class="welcome-title">
                        Welcome back, <span class="username-highlight">@UserService.CurrentUser</span>
                    </h1>
                    <p class="welcome-subtitle">
                        Find your match • Keep the spark going • Make it unforgettable
                    </p>
                    
                    @if (!string.IsNullOrEmpty(friendMessage))
                    {
                        <div class="message-box">
                            <span>@friendMessage</span>
                        </div>
                    }
                </div>
            </div>

            <!-- Main Grid -->
            <div class="main-grid">
                <!-- Game Section -->
                <div class="game-section glass-card">
                    <div class="card-shine"></div>
                    
                    <div class="section-icon">🎮</div>
                    <h2 class="section-title">Join New Game</h2>
                    <p class="section-description">
                        Connect to our interactive server and get matched based on your answers.
                    </p>

                    <a href="/game" class="btn-connect">
                        <span>Connect to Game</span>
                        <div class="btn-shimmer"></div>
                    </a>

                    @if (!string.IsNullOrEmpty(statusMessage))
                    {
                        <p class="status-message">@statusMessage</p>
                    }
                </div>

                <!-- Chat Section -->
                <div class="chat-section glass-card">
                    <div class="card-shine"></div>
                    
                    <div class="chat-header">
                        <div class="chat-header-left">
                            <div class="section-icon">💬</div>
                            <div>
                                <h2 class="section-title">Messages</h2>
                                <p class="chat-subtitle">Reconnect with your matches</p>
                            </div>
                        </div>
                        @if (unreadCount > 0)
                        {
                            <span class="unread-badge">@unreadCount new</span>
                        }
                    </div>

                    @if (latestNotification != null)
                    {
                        <div class="chat-notification">
                            <div class="notification-glow"></div>
                            <div class="notification-content">
                                <div class="notification-title">New message</div>
                                <div class="notification-body">
                                    <strong>@latestNotification.Username</strong>: @latestNotification.Preview
                                </div>
                            </div>
                            <div class="notification-actions">
                                <button class="btn-open-chat" @onclick="() => OpenChat(latestNotification.Username)">
                                    <span>Open</span>
                                    <div class="btn-shimmer"></div>
                                </button>
                                <button class="btn-dismiss" @onclick="DismissNotification">×</button>
                            </div>
                        </div>
                    }

                    @if (chatLoading)
                    {
                        <div class="chat-loading">
                            <div class="loading-spinner"></div>
                            <p>Loading your chats...</p>
                        </div>
                    }
                    else if (!string.IsNullOrWhiteSpace(chatError))
                    {
                        <div class="chat-error">@chatError</div>
                    }
                    else if (contactSummaries.Count == 0)
                    {
                        <div class="chat-empty">
                            <div class="empty-icon">📭</div>
                            <h3>No chats yet</h3>
                            <p>Play a game to meet new players and start messaging!</p>
                            <a href="/game" class="btn-find-match">
                                <span>Find a Match</span>
                                <div class="btn-shimmer"></div>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="chat-list">
                            @foreach (var contact in contactSummaries)
                            {
                                <div class="chat-card @(contact.HasUnread ? "unread" : "")">
                                    <div class="chat-card-glow"></div>
                                    <div class="chat-card-content">
                                        <div class="chat-card-header">
                                            <div class="chat-info">
                                                <div class="chat-name">@contact.Username</div>
                                                @if (contact.Compatibility.HasValue)
                                                {
                                                    <span class="compat-badge">
                                                        @contact.Compatibility.Value.ToString("F0")% match
                                                    </span>
                                                }
                                            </div>
                                            <div class="chat-meta">
                                                @if (contact.LastMessageAt.HasValue)
                                                {
                                                    <span class="timestamp">@contact.LastMessageAt.Value.ToLocalTime().ToString("MMM dd, HH:mm")</span>
                                                }
                                                @if (contact.HasUnread)
                                                {
                                                    <span class="new-badge">New</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="chat-preview">@contact.LastMessagePreview</div>
                                        <button class="btn-open-chat-card" @onclick="() => OpenChat(contact.Username)">
                                            <span>Open Chat</span>
                                            <div class="btn-shimmer"></div>
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="not-logged-in">
            <div class="login-prompt glass-card">
                <div class="card-shine"></div>
                <div class="prompt-icon">🔒</div>
                <h3>You are not logged in</h3>
                <p>Please log in to access your KNOTS account</p>
                <a href="/" class="btn-login-redirect">
                    <span>Go to Login</span>
                    <div class="btn-shimmer"></div>
                </a>
            </div>
        </div>
    }
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const container = document.querySelector('.home-container');
        const mouseGlow = document.getElementById('mouseGlow');
        
        if (container && mouseGlow) {
            container.addEventListener('mousemove', function(e) {
                const rect = container.getBoundingClientRect();
                const x = ((e.clientX - rect.left) / rect.width) * 100;
                const y = ((e.clientY - rect.top) / rect.height) * 100;
                mouseGlow.style.left = x + '%';
                mouseGlow.style.top = y + '%';
            });
        }
        
        const particles = document.querySelectorAll('.particle');
        particles.forEach((particle) => {
            particle.style.left = Math.random() * 100 + '%';
            particle.style.top = Math.random() * 100 + '%';
            particle.style.width = (Math.random() * 3 + 1.5) + 'px';
            particle.style.height = particle.style.width;
            particle.style.opacity = Math.random() * 0.4 + 0.2;
            particle.style.animationDelay = (Math.random() * 5) + 's';
        });
        
        const floatingElements = document.querySelectorAll('.floating-element');
        floatingElements.forEach((element) => {
            element.style.left = Math.random() * 100 + '%';
            element.style.top = Math.random() * 100 + '%';
            element.style.fontSize = (Math.random() * 30 + 30) + 'px';
        });
    });
</script>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    .home-container {
        min-height: 100vh;
        width: 100vw;
        position: relative;
        overflow-x: hidden;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #b4d0ec 0%, #a8c5e8 100%);
    }

    /* Background Animation */
    .background-animation {
        position: fixed;
        inset: 0;
        animation: gradientShift 15s ease infinite;
        pointer-events: none;
        z-index: 0;
    }

    @@keyframes gradientShift {
        0%, 100% { filter: hue-rotate(0deg) brightness(1); }
        50% { filter: hue-rotate(10deg) brightness(1.05); }
    }

    .floating-elements {
        position: absolute;
        inset: 0;
    }

    .floating-element {
        position: absolute;
        opacity: 0.15;
        animation: floatElement 20s ease-in-out infinite;
        filter: blur(2px);
    }

    @@keyframes floatElement {
        0%, 100% { 
            transform: translate(0, 0) rotate(0deg) scale(1);
            opacity: 0.1;
        }
        25% { 
            transform: translate(20px, -30px) rotate(90deg) scale(1.2);
            opacity: 0.2;
        }
        50% { 
            transform: translate(-15px, 25px) rotate(180deg) scale(0.9);
            opacity: 0.15;
        }
        75% { 
            transform: translate(25px, 15px) rotate(270deg) scale(1.1);
            opacity: 0.18;
        }
    }

    .gradient-orb {
        position: absolute;
        border-radius: 50%;
        filter: blur(80px);
        opacity: 0.4;
        animation: floatOrb 20s ease-in-out infinite;
    }

    .orb-1 {
        width: 500px;
        height: 500px;
        background: radial-gradient(circle, #f888e9 0%, transparent 70%);
        top: -10%;
        left: -10%;
        animation-duration: 25s;
    }

    .orb-2 {
        width: 400px;
        height: 400px;
        background: radial-gradient(circle, #bd87f8 0%, transparent 70%);
        bottom: -10%;
        right: -10%;
        animation-duration: 20s;
        animation-delay: -5s;
    }

    .orb-3 {
        width: 350px;
        height: 350px;
        background: radial-gradient(circle, #a8c5e8 0%, transparent 70%);
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        animation-duration: 30s;
        animation-delay: -10s;
    }

    @@keyframes floatOrb {
        0%, 100% { transform: translate(0, 0); }
        25% { transform: translate(30px, -30px); }
        50% { transform: translate(-20px, 20px); }
        75% { transform: translate(20px, 30px); }
    }

    .particle {
        position: absolute;
        background: white;
        border-radius: 50%;
        box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);
        animation: particleFloat 8s infinite linear;
    }

    @@keyframes particleFloat {
        0% { transform: translateY(0); }
        100% { transform: translateY(-20px); }
    }

    .mouse-glow {
        position: absolute;
        width: 300px;
        height: 300px;
        background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
        transform: translate(-50%, -50%);
        transition: all 0.3s ease;
        pointer-events: none;
    }

    /* Glass Card Effect */
    .glass-card {
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px) saturate(180%);
        border-radius: 30px;
        box-shadow: 
            0 20px 60px rgba(0, 0, 0, 0.3),
            0 0 0 1px rgba(255, 255, 255, 0.5) inset;
        animation: cardEntrance 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
        overflow: hidden;
    }

    @@keyframes cardEntrance {
        from {
            opacity: 0;
            transform: translateY(30px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .card-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        animation: shine 3s infinite;
        pointer-events: none;
    }

    @@keyframes shine {
        0% { left: -100%; }
        50%, 100% { left: 100%; }
    }

    /* Navigation */
    .top-navigation {
        position: relative;
        z-index: 10;
        padding: 1.5rem 0;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
    }

    .nav-content {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .nav-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .brand-icon-wrapper {
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .brand-icon-wrapper:hover {
        transform: scale(1.15) rotate(10deg);
    }

    .brand-rope {
        font-size: 50px;
        display: inline-block;
        filter: drop-shadow(0 4px 20px rgba(248, 136, 233, 0.6));
        animation: brandFloat 3s ease-in-out infinite;
    }

    @@keyframes brandFloat {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-5px) rotate(5deg); }
    }

    .brand-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 120%;
        height: 120%;
        transform: translate(-50%, -50%);
        background: radial-gradient(circle, rgba(248, 136, 233, 0.4) 0%, transparent 70%);
        animation: glowPulse 2s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes glowPulse {
        0%, 100% { 
            opacity: 0.6;
            transform: translate(-50%, -50%) scale(1);
        }
        50% { 
            opacity: 1;
            transform: translate(-50%, -50%) scale(1.2);
        }
    }

    .brand-text {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
