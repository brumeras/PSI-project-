    }

    .nav-link.active {
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(248, 136, 233, 0.4);
    }

    .link-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
