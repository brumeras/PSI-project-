        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: 3px;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
    }

    .nav-link {
        position: relative;
        padding: 0.75rem 1.5rem;
        border-radius: 15px;
        text-decoration: none;
        color: #333;
        font-weight: 700;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
