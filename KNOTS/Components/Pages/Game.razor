        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.5), transparent);
        animation: shimmer 2.5s infinite;
    }

    @@keyframes shimmer {
        0% { left: -100%; }
        100% { left: 100%; }
    }

    /* Game Room Section */
    .game-room-section {
        max-width: 900px;
        margin: 0 auto;
        animation: fadeInUp 0.8s ease;
    }

    .room-info-card, .completion-card, .game-form-section {
        position: relative;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(25px) saturate(180%);
        border-radius: 25px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 50px rgba(248, 136, 233, 0.2);
        overflow: hidden;
        transition: all 0.4s ease;
    }

    .room-info-card:hover, .completion-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 18px 55px rgba(248, 136, 233, 0.25);
    }

    .room-header h3 {
        color: #333;
        font-size: 1.5rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
    }

    .room-code {
