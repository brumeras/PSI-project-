        color: white;
        padding: 0.75rem 2rem;
        border-radius: 15px;
        font-weight: 800;
        font-size: 2rem;
        letter-spacing: 5px;
        box-shadow: 0 6px 20px rgba(248, 136, 233, 0.4);
        animation: codeGlow 2.5s ease-in-out infinite;
        display: inline-block;
    }

    @@keyframes codeGlow {
        0%, 100% { box-shadow: 0 6px 20px rgba(248, 136, 233, 0.4); }
        50% { box-shadow: 0 10px 35px rgba(248, 136, 233, 0.7); }
    }

    .players-count {
        color: #666;
        font-weight: 600;
        margin-top: 0.75rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .players-list {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 2px solid rgba(248, 136, 233, 0.2);
    }

    .players-list strong {
        color: #333;
        display: block;
        margin-bottom: 1rem;
        font-weight: 800;
    }

    .player-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.75rem;
    }

    .player-badge {
        background: #f0f0f0;
        padding: 0.6rem 1.25rem;
        border-radius: 20px;
        font-weight: 700;
        color: #333;
        display: inline-flex;
        align-items: center;
