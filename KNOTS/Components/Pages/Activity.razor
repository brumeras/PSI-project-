@page "/activity"
@using KNOTS.Services
@using KNOTS.Services.Interfaces
@inject InterfaceCompatibilityService CompatibilityService
@inject InterfaceUserService UserService
@attribute [StreamRendering]
@rendermode InteractiveServer

<PageTitle>My Activity</PageTitle>

<div class="activity-page">
    <div class="floating-pretzel pretzel-1">🥨</div>
    <div class="floating-pretzel pretzel-2">🥨</div>
    <div class="twinkle star-1">⭐</div>
    <div class="twinkle star-2">⭐</div>
    <div class="twinkle star-3">⭐</div>
    <nav class="top-navigation">
        <div class="nav-content">
            <div class="nav-brand">
                <div class="brand-icon-wrapper">
                    <span class="brand-rope">🥨</span>
                    <div class="brand-glow"></div>
                </div>
                <span class="brand-text">KNOTS</span>
            </div>
            <div class="nav-links">
                <a href="/Home" class="nav-link">
                    <span>Home</span>
                    <div class="link-shine"></div>
                </a>
                <a href="/activity" class="nav-link active">
                    <span>My Activity</span>
                    <div class="link-shine"></div>
                </a>
                <a href="/leaderboard" class="nav-link">
                    <span>Top Knotters</span>
                    <div class="link-shine"></div>
                </a>
            </div>
            <a href="/" class="btn-logout">
                <span>Logout</span>
                <div class="btn-shimmer"></div>
            </a>
        </div>
    </nav>

    <div class="activity-container">
        <div class="activity-header glass-card">
            <div class="activity-header-top">
                <div>
                    <p class="eyebrow">Player insights</p>
                    <h1>My Activity</h1>
                </div>
                <div class="header-actions">
                    <a href="/game" class="pill-link primary-pill"><i class="bi bi-controller"></i> Play a game</a>
                    <a href="/Home" class="pill-link subtle"><i class="bi bi-house-door"></i> Back home</a>
                </div>
            </div>
            @if (UserService.IsAuthenticated)
            {
                <p>Recent compatibility results for <strong>@UserService.CurrentUser</strong></p>
            }
        </div>
    
    @if (!UserService.IsAuthenticated)
    {
        <div class="warning-card glass-card">
            <i class="bi bi-exclamation-triangle"></i>
            <h3>Authentication Required</h3>
            <p>Please login to view your game history.</p>
            <a href="/" class="btn-login">Go to Login</a>
        </div>
    }
    else
    {
        @if (isLoading)
        {
            <div class="loading-card glass-card">
                <div class="spinner-border" style="color: #f888e9;" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-3">Loading your game history...</p>
            </div>
        }
        else if (gameHistory == null || !gameHistory.Any())
        {
            <div class="no-data-card glass-card">
                <i class="bi bi-controller" style="font-size: 4rem; color: #f888e9;"></i>
                <h3>No Game History</h3>
                <p>You haven't played any games yet. Start playing to see your results here!</p>
                <a href="/game" class="btn-play">Play Your First Game</a>
            </div>
        }
        else
        {
            <div class="stats-grid">
                <div class="stat-card glass-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);">
                        <i class="bi bi-trophy-fill"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Total Games</p>
                        <h3>@gameHistory.Count</h3>
                        <p class="stat-hint">Completed rooms and lobbies</p>
                    </div>
                </div>

                <div class="stat-card glass-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #4caf50 0%, #45a049 100%);">
                        <i class="bi bi-heart-fill"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Avg Compatibility</p>
                        <h3>@GetAverageCompatibility()%</h3>
                        <p class="stat-hint">Keep aiming for 100%</p>
                    </div>
                </div>

                <div class="stat-card glass-card">
                    <div class="stat-icon" style="background: linear-gradient(135deg, #ff9800 0%, #f57c00 100%);">
                        <i class="bi bi-star-fill"></i>
                    </div>
                    <div class="stat-content">
                        <p class="stat-label">Best Match Ever</p>
                        <h3>@GetBestMatchEver()</h3>
                        <p class="stat-hint">Across all your matches</p>
                    </div>
                </div>
            </div>

            <div class="history-card glass-card">
                <div class="history-header">
                    <div>
                        <h4>Your Game Results</h4>
                        <p class="history-subtitle">Live updates of every room you played</p>
                    </div>
                    <span class="soft-pill">Updated live</span>
                </div>
                <div class="table-responsive unified-results">
                    <table class="history-table">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Room</th>
                                <th>Best Match</th>
                                <th>Compatibility</th>
                                <th>Players</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var game in gameHistory)
                            {
                                <tr>
                                    <td>
                                        <div class="date-cell">
                                            <i class="bi bi-calendar3"></i>
                                            @game.PlayedDate.ToString("MMM dd, yyyy")
                                            <small>@game.PlayedDate.ToString("HH:mm")</small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="room-badge">@game.RoomCode</span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(game.BestMatchPlayer))
                                        {
                                            <strong class="match-name">@game.BestMatchPlayer</strong>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        @if (game.BestMatchPercentage > 0)
                                        {
                                            <div class="compatibility-display">
                                                <div class="progress-mini">
                                                    <div class="progress-fill-mini @GetProgressClass(game.BestMatchPercentage)"
                                                         style="width: @game.BestMatchPercentage%">
                                                    </div>
                                                </div>
                                                <span class="percentage-text">@game.BestMatchPercentage%</span>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="players-count">
                                            <i class="bi bi-people-fill"></i> @game.TotalPlayers
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn-details" @onclick="() => ShowDetails(game)">
                                            <i class="bi bi-eye"></i> View
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }

        @if (selectedGame != null)
        {
            <div class="modal-overlay" @onclick="CloseDetails">
                <div class="modal-container" @onclick:stopPropagation="true">
                    <div class="modal-header-custom">
                        <h3>Game Details - Room @selectedGame.RoomCode</h3>
                    </div>
                    <div class="modal-body-custom">
                        <div class="game-info">
                            <div class="info-item">
                                <i class="bi bi-calendar3"></i>
                                <span>@selectedGame.PlayedDate.ToString("MMMM dd, yyyy 'at' HH:mm")</span>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-people-fill"></i>
                                <span>@selectedGame.TotalPlayers players</span>
                            </div>
                        </div>

                        <h5 class="results-title">All Compatibility Results:</h5>
                        @if (selectedGame.AllResults != null && selectedGame.AllResults.Any())
                        {
                            <div class="results-list">
                                @for (int i = 0; i < selectedGame.AllResults.Count; i++)
                                {
                                    var match = selectedGame.AllResults[i];
                                    var rankLabel = i == 0 ? "1st" : i == 1 ? "2nd" : i == 2 ? "3rd" : (i + 1).ToString();
                                    
                                    <div class="result-row @(i == 0 ? "top-match" : "")">
                                        <div class="rank-badge">
                                            <span class="rank-label">@rankLabel</span>
                                        </div>
                                        <div class="players-info">
                                            <strong>@match.Player1 & @match.Player2</strong>
                                            <small>@match.MatchingSwipes / @match.TotalStatements matches</small>
                                        </div>
                                        <div class="percentage-badge @GetBadgeClass(match.Percentage)">
                                            @match.Percentage%
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    <div class="modal-footer-custom">
                        <button class="btn-close-footer" @onclick="CloseDetails">Close</button>
                    </div>
                </div>
            </div>
        }
    }
</div>
</div>

<style>
    .activity-page {
        min-height: 100vh;
        padding: 0 0 2rem;
        background: linear-gradient(135deg, #d8e7ff 0%, #cbd6ff 28%, #c6c1ff 58%, #dcd8ff 100%);
        width: 100%;
        position: relative;
        overflow: hidden;
        color: #1f2a3d;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        flex-direction: column;
    }

    :global(body) {
        margin: 0;
    }

    .floating-pretzel,
    .twinkle {
        position: absolute;
        z-index: 0;
        opacity: 0.9;
        filter: drop-shadow(0 12px 26px rgba(255, 193, 103, 0.2));
        user-select: none;
        pointer-events: none;
    }

    .floating-pretzel {
        font-size: 4rem;
        animation: pretzelDrift 12s ease-in-out infinite;
    }

    .pretzel-1 { top: 12%; left: 6%; animation-delay: -2s; }
    .pretzel-2 { bottom: 12%; right: 8%; animation-delay: -6s; }

    .twinkle {
        font-size: 2.6rem;
        animation: starBounce 9s ease-in-out infinite;
        color: #f7c948;
        text-shadow: 0 0 18px rgba(247, 201, 72, 0.55);
    }

    .star-1 { top: 20%; right: 12%; animation-duration: 8s; }
    .star-2 { bottom: 18%; left: 16%; animation-duration: 10s; }
    .star-3 { top: 35%; left: 42%; animation-duration: 12s; }

    @@keyframes pretzelDrift {
        0%, 100% { transform: translate(0, 0) rotate(-4deg); }
        25% { transform: translate(12px, -18px) rotate(4deg); }
        50% { transform: translate(-8px, 10px) rotate(-2deg); }
        75% { transform: translate(16px, 6px) rotate(6deg); }
    }

    @@keyframes starBounce {
        0%, 100% { transform: translateY(0) scale(1); opacity: 0.8; }
        30% { transform: translateY(-12px) scale(1.08); opacity: 1; }
        60% { transform: translateY(8px) scale(0.96); opacity: 0.9; }
    }

    .top-navigation {
        position: relative;
        z-index: 10;
        padding: 2rem 0 1rem;
        background: transparent;
        display: flex;
        justify-content: center;
    }

    .nav-content {
        width: min(1400px, calc(100% - 2.5rem));
        margin: 0 auto;
        padding: 1rem 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(14px);
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.4);
        box-shadow: 0 16px 32px rgba(12, 19, 38, 0.16);
    }

    .nav-brand {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .brand-icon-wrapper {
        position: relative;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

    .brand-icon-wrapper:hover {
        transform: scale(1.1) rotate(6deg);
    }

    .brand-rope {
        font-size: 42px;
        display: inline-block;
        filter: drop-shadow(0 4px 20px rgba(248, 136, 233, 0.6));
        animation: brandFloat 3s ease-in-out infinite;
    }

    @@keyframes brandFloat {
        0%, 100% { transform: translateY(0) rotate(0deg); }
        50% { transform: translateY(-5px) rotate(5deg); }
    }

    .brand-glow {
        position: absolute;
        top: 50%;
        left: 50%;
        width: 120%;
        height: 120%;
        transform: translate(-50%, -50%);
        background: radial-gradient(circle, rgba(248, 136, 233, 0.4) 0%, transparent 70%);
        animation: glowPulse 2s ease-in-out infinite;
        pointer-events: none;
    }

    @@keyframes glowPulse {
        0%, 100% { opacity: 0.6; transform: translate(-50%, -50%) scale(1); }
        50% { opacity: 1; transform: translate(-50%, -50%) scale(1.2); }
    }

    .brand-text {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: 3px;
    }

    .nav-links {
        display: flex;
        gap: 1rem;
    }

    .nav-link {
        position: relative;
        padding: 0.75rem 1.5rem;
        border-radius: 15px;
        text-decoration: none;
        color: #333;
        font-weight: 700;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
    }

    .nav-link span { position: relative; z-index: 1; }

    .nav-link::before {
        content: '';
        position: absolute;
        inset: 0;
        background: rgba(255, 255, 255, 0.5);
        border-radius: 15px;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .nav-link:hover::before { opacity: 1; }

    .nav-link:hover { transform: translateY(-2px); color: #f888e9; }

    .nav-link.active {
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
        color: white;
        box-shadow: 0 8px 25px rgba(248, 136, 233, 0.4);
    }

    .link-shine {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: left 0.5s ease;
    }

    .nav-link:hover .link-shine { left: 100%; }

    .btn-logout {
        position: relative;
        padding: 0.75rem 1.5rem;
        border: none;
        border-radius: 15px;
        background: linear-gradient(135deg, #666 0%, #444 100%);
        color: white;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        overflow: hidden;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.3);
        text-decoration: none;
    }

    .btn-logout span { position: relative; z-index: 1; }

    .btn-logout .btn-shimmer {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
        transition: left 0.5s ease;
    }

    .btn-logout:hover .btn-shimmer { left: 100%; }

    .btn-logout:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 35px rgba(0, 0, 0, 0.4);
    }

    .activity-container {
        width: min(1600px, calc(100% - 2rem));
        margin: 2rem auto 0;
        padding: 3rem 2rem 2.5rem;
        position: relative;
        z-index: 1;
        flex: 1;
        max-width: none;
    }

    .glass-card {
        background: rgba(255, 255, 255, 0.92);
        border: 1px solid rgba(0, 0, 0, 0.05);
        border-radius: 24px;
        box-shadow: 0 18px 42px rgba(13, 27, 42, 0.12);
    }

    .activity-header {
        margin-bottom: 1.5rem;
        padding: 1.75rem;
    }

    .activity-header-top {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .eyebrow {
        text-transform: uppercase;
        font-size: 0.85rem;
        letter-spacing: 2px;
        color: #9fb3ff;
        margin: 0 0 0.35rem 0;
        font-weight: 700;
    }

    .activity-header h1 {
        color: #1f2a3d;
        font-size: 2.75rem;
        font-weight: 800;
        margin: 0;
    }

    .header-actions {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .pill-link {
        background: linear-gradient(135deg, rgba(248, 136, 233, 0.9) 0%, rgba(189, 135, 248, 0.9) 100%);
        color: #ffffff;
        text-decoration: none;
        font-weight: 800;
        padding: 0.75rem 1.3rem;
        border-radius: 18px;
        display: inline-flex;
        align-items: center;
        gap: 0.45rem;
        border: 1px solid rgba(189, 135, 248, 0.6);
        box-shadow: 0 10px 22px rgba(189, 135, 248, 0.32);
        transition: all 0.3s ease;
    }

    .pill-link:hover {
        transform: translateY(-2px);
        box-shadow: 0 14px 30px rgba(189, 135, 248, 0.38);
    }

    .pill-link.subtle {
        background: linear-gradient(135deg, rgba(248, 136, 233, 0.92) 0%, rgba(189, 135, 248, 0.94) 100%);
        color: #ffffff;
        box-shadow: 0 16px 34px rgba(189, 135, 248, 0.35);
        border-color: rgba(189, 135, 248, 0.65);
    }

    .primary-pill {
        box-shadow: 0 16px 34px rgba(189, 135, 248, 0.35);
    }

    .activity-header p {
        color: #4f5672;
        font-size: 1.05rem;
        margin: 0.35rem 0 0;
    }

    .warning-card, .loading-card, .no-data-card {
        border-radius: 24px;
        padding: 3rem 2rem;
        text-align: center;
        color: #1f2a3d;
    }

    .warning-card i, .no-data-card i {
        font-size: 4rem;
        color: #ffd166;
        margin-bottom: 1rem;
    }

    .warning-card h3, .no-data-card h3 {
        color: #1f2a3d;
        font-size: 2rem;
        margin: 1rem 0;
        font-weight: 800;
    }

    .warning-card p, .loading-card p, .no-data-card p {
        color: #4f5672;
        font-size: 1.05rem;
        margin-bottom: 1.75rem;
    }

    .btn-login, .btn-play {
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
        color: #ffffff;
        padding: 0.9rem 1.8rem;
        border-radius: 14px;
        text-decoration: none;
        font-weight: 800;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.35rem;
        border: none;
        box-shadow: 0 14px 32px rgba(189, 135, 248, 0.35);
    }

    .btn-login:hover, .btn-play:hover {
        transform: translateY(-2px);
        box-shadow: 0 18px 38px rgba(189, 135, 248, 0.42);
        color: #ffffff;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.25rem;
        margin-bottom: 1.5rem;
    }

    .stat-card {
        padding: 1.6rem;
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 1rem;
        align-items: center;
    }

    .stat-icon {
        width: 64px;
        height: 64px;
        border-radius: 18px;
        display: grid;
        place-items: center;
        color: #ffffff;
        font-size: 1.75rem;
        background: linear-gradient(135deg, #f888e9 0%, #bd87f8 100%);
        box-shadow: 0 16px 32px rgba(189, 135, 248, 0.25);
    }

    .stat-content h3 {
        margin: 0;
        color: #1f2a3d;
        font-size: 2rem;
        font-weight: 800;
    }

    .stat-label {
        margin: 0;
        color: #3a4560;
        font-weight: 700;
    }

    .stat-hint {
        margin: 0.3rem 0 0;
        color: #4f5672;
        font-size: 0.95rem;
    }

    .history-card {
        margin-top: 1.5rem;
        padding: 1.5rem;
        box-shadow: 0 18px 32px rgba(13, 27, 42, 0.12);
    }

    .history-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .history-header h4 {
        margin: 0;
        color: #1f2a3d;
        font-size: 1.5rem;
        font-weight: 800;
    }

    .history-subtitle {
        margin: 0.2rem 0 0;
        color: #3d4563;
        font-weight: 600;
    }

    .soft-pill {
        background: linear-gradient(135deg, rgba(248, 136, 233, 0.25) 0%, rgba(189, 135, 248, 0.3) 100%);
        color: #8a3fc0;
        padding: 0.5rem 0.85rem;
        border-radius: 999px;
        font-weight: 800;
        border: 1px solid rgba(189, 135, 248, 0.45);
        box-shadow: 0 8px 18px rgba(189, 135, 248, 0.25);
        letter-spacing: 0.02em;
    }

    .table-responsive { overflow-x: auto; }

    .unified-results {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 16px;
        border: 1px solid rgba(0, 0, 0, 0.04);
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.7);
        padding: 0.5rem 0.35rem;
    }

    .history-table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
    }

    .history-table thead {
        position: sticky;
        top: 0;
        background: rgba(255, 255, 255, 0.95);
        z-index: 1;
    }

    .history-table th {
        text-align: left;
        color: #bd87f8;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-size: 0.85rem;
        padding: 0.75rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .history-table td {
        padding: 0.9rem 0.75rem;
        color: #1f2a3d;
        border-bottom: 1px solid rgba(0, 0, 0, 0.04);
        background: transparent;
    }

    .history-table tr:last-child td {
        border-bottom: none;
    }

    .date-cell {
        display: grid;
        grid-template-columns: auto 1fr;
        gap: 0.5rem;
        align-items: center;
        color: #1f2a3d;
        font-weight: 700;
    }

    .date-cell small { display: block; color: #bd87f8; font-weight: 600; }

    .room-badge {
        background: linear-gradient(135deg, rgba(248, 136, 233, 0.18) 0%, rgba(189, 135, 248, 0.22) 100%);
        color: #8a3fc0;
        padding: 0.45rem 0.75rem;
        border-radius: 10px;
        font-weight: 800;
        border: 1px solid rgba(189, 135, 248, 0.35);
    }

    .match-name { color: #1f2a3d; }

    .compatibility-display { display: flex; align-items: center; gap: 0.65rem; }

    .progress-mini {
        width: 140px;
        height: 12px;
        background: linear-gradient(135deg, rgba(248, 136, 233, 0.18) 0%, rgba(189, 135, 248, 0.16) 100%);
        border-radius: 999px;
        overflow: hidden;
        border: 1px solid rgba(189, 135, 248, 0.35);
        box-shadow: inset 0 1px 4px rgba(0, 0, 0, 0.05);
